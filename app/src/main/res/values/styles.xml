<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="RatingButton">
        <item name="android:layout_width">@dimen/rating_bar_button_width</item>
        <item name="android:layout_height">@dimen/rating_bar_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/rating_bar_button_margin</item>
        <item name="android:layout_marginStart">@dimen/rating_bar_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/rating_bar_button_margin</item>
    </style>

</resources>
