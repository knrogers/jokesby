<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rating_bar_margin_vertical">

        <LinearLayout
            android:id="@+id/rating_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rating_bar_group_height"
            android:layout_marginEnd="@dimen/rating_bar_group_margin"
            android:layout_marginStart="@dimen/rating_bar_group_margin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_laugh"
                style="@style/RatingButton"
                android:background="@drawable/ic_laugh"
                android:tag="@string/laugh_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_happy"
                style="@style/RatingButton"
                android:background="@drawable/ic_happy"
                android:tag="@string/happy_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_tongue_out"
                style="@style/RatingButton"
                android:background="@drawable/ic_tongue_out"
                android:tag="@string/tongue_out_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_surprised"
                style="@style/RatingButton"
                android:background="@drawable/ic_surprised"
                android:tag="@string/surprised_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_neutral"
                style="@style/RatingButton"
                android:background="@drawable/ic_neutral"
                android:tag="@string/neutral_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/rating_bar_button_sad"
                style="@style/RatingButton"
                android:background="@drawable/ic_sad"
                android:tag="@string/sad_emoticon" />

            <Space
                android:layout_width="@dimen/rating_space_width"
                android:layout_height="@dimen/rating_space_height"
                android:layout_weight="1"/>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>